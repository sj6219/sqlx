{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build mysql",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--bin=sqlx-example-mysql-todos",
				"--package=sqlx-example-mysql-todos"
			],
			"options": {
                "cwd": "${workspaceFolder}",
                "env": {
					"DATABASE_URL": "mysql://root:password@localhost/todos",
                }
            },
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "cargo build sqlite",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--bin=sqlx-example-sqlite-todos",
				"--package=sqlx-example-sqlite-todos"
			],
			"options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DATABASE_URL": "sqlite:todos.db",
                }
            },
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}